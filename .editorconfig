root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 80
indent_size = 4
tab_width = 4

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab
